{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "files": {
    "ignore": [
      "dist/**/*",
      "server/static/**/*",
      "src/server/static/**/*",
      "src/client/dist/**/*",
      "**/node_modules/**/*",
      "**/*.css"
    ]
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {},
      "suspicious": {
        "noArrayIndexKey": "off"
      },
      "complexity": {},
      "correctness": {
        "noUnknownFunction": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "trailingCommas": "es5",
      "semicolons": "always"
    }
  }
}
