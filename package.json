{
  "name": "neutrofill",
  "version": "0.0.1",
  "author": "0age",
  "description": "Automated service for filling cross-chain swap requests from CompactX",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "compile:client": "cd src/client && npm install && npm run build -- --outDir ../../dist/client",
    "compile:server": "npm install && tsc -p tsconfig.server.json",
    "build": "npm run compile:server && npm run compile:client",
    "start": "node dist/server/index.js",
    "dev": "tsx watch src/server/index.ts",
    "typecheck": "tsc -p tsconfig.server.json --noEmit",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "format:check": "biome format --check .",
    "fix": "npm run format && npm run lint:fix",
    "test": "jest",
    "lint-staged": "lint-staged",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": ["biome format --write", "biome lint --write"]
  },
  "keywords": ["blockchain", "ethereum", "transaction", "automation"],
  "license": "MIT",
  "dependencies": {
    "@types/cors": "^2.8.17",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "node-fetch": "^3.3.2",
    "viem": "^2.7.8",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@eslint/js": "^8.56.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.17",
    "@types/supertest": "^6.0.2",
    "@types/ws": "^8.5.14",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  }
}
